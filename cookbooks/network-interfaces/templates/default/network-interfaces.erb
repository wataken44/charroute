# created by recipe network-interfaces

# The loopback network interface
auto lo
iface lo inet loopback

<% @interfaces.each do |iface, config| %>
<%if config['auto'] %>auto <%= iface %><% end %>
<%if config['allow-hotplug'] %>allow-hotplug <%= iface %><% end %>
iface <%= iface %> inet <%= config["method"] %>
<% (config["options"] || {}).each do |k,v| %>
    <%= k %> <%= v %>
<% end %>

<% end %>
